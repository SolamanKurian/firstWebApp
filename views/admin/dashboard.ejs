

 <%include('../layouts/header.ejs') %>
 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<div class="container">

  <h4 class="text-center mt-3 mb-4">Dashboard</h4>

  <div class="row mb-3">
    <div class="col-md-6">
      <form class="d-flex">
        <input type="search" class="form-control me-2" placeholder="Search" name="search">
        <button type="submit" class="btn btn-primary">Search</button>
      </form>
    </div>
    
    <div class="col-md-6 text-end">
      <a href="/admin/new-user" class="btn btn-success">Add New User</a>
    </div>
  </div>
  <div class="text-center">
    <a href="/admin/home" class="btn btn-secondary">Go to Home</a>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile Number</th>
        <th>Photo</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% if(users.length > 0) { %>
        <% for(let i=0; i<users.length; i++) { %>
          <tr>
            <td><%= users[i].name %></td>
            <td><%= users[i].email %></td>
            <td><%= users[i].mobile %></td>
            <td><img src="/userimages/<%= users[i].image %>" alt="<%= users[i].image %>" width="150px" height="150px"></td>
            <td>
              <a href="/admin/edit-user?id=<%= users[i]._id %>" class="btn btn-primary btn-sm">Edit</a>
              <a href="/admin/delete-user?id=<%= users[i]._id %>" class="btn btn-danger btn-sm">Delete</a>
            </td>
          </tr>
        <% } %>
      <% } else { %>
        <tr>
          <td colspan="5" class="text-center">Users not found</td>
        </tr>
      <% } %>
    </tbody>
  </table>

 

</div>
<%-include('../layouts/footer.ejs') %>
